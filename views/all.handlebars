<div class="pre-post">
  {{#each blogPrePost}}
    <div class="post-heading">
      <h2>{{this.post_heading}}</h2>
      <p>Posted by {{this.user_name}} on {{format_date this.post_date}}</p>
    </div>
    <div class="post-body">
      <p>{{this.post_body}}</p>
      <div class="comment-form">
            <h3>Add a Comment</h3>
            <form id="comment-form" action="/blog/:blog_id/comment" method="POST">
                <textarea id="comment-text" placeholder="Your comment here" rows="4"></textarea>
                 {{#if logged_in}}
                <button type="submit">Post Comment</button>
                 {{else}} 
                 <p>Please <a href="/login">login</a> to add a comment.</p>
                  {{/if}}
            </form>
        </div>
        <div class="comment-section">
            <h3>Comments</h3>
             <ul class="comment-list">
        {{#each this.comments}}
          <li>
            <div class="comment">
              <p>{{user_name}}</p>
              <p>{{comment}}</p>
            </div>
          </li>
                {{/each}}
            </ul>
        </div>
    </div>
  {{/each}}
</div>

<div class="blog-posts">
  {{#each blogPosts}}
  <div class="post-heading">
    <h2>{{this.post_heading}}</h2>
    <p>Posted by {{ this.user_name }} on {{ format_date this.post_date }}</p>
  </div>
  <div class="post-body">
    <p>{{this.post_body}}</p>

    <div class="comment-form">
      <h3>Add a Comment</h3>
      <form id="comment-form" class="comment-area">
        <textarea id="comment-text" placeholder="Your comment here" rows="4"></textarea>
        {{#if logged_in}}
        <button type="submit">Post Comment</button>
        {{else}}
        <a id="login-commment-allowed" href="/login">Login to leave a comment!</a>
        {{/if}}
      </form>
    </div>
    <div class="comment-section">
      <h3>Comments</h3>
      <ul class="comment-list">
        <li>
          <div class="comment">
            <p>Comment 1: This is the first comment.</p>
          </div>
        </li>
        <li>
          <div class="comment">
            <p>Comment 2: This is the second comment.</p>
          </div>
        </li>
      </ul>
    </div>
  </div>
  {{/each}}
</div>