<div class="user-blog-bench">
  <div id="create-post-form">
    <div class="dashboard-area">
      {{#if logged_in}}
        <div class="row align-center mb-5">
          <div class="col-md-6">
            <h2>{{get_emoji}} {{username}}</h2>
          </div>
        </div>
      {{/if}}
    </div>

    <form id="create-post-form" action="/" method="POST">
      <h2>Title:</h2>
      <textarea id="title" name="title" rows="2" cols="50" required></textarea>
      <h2>Text:</h2>
      <textarea id="text" name="text" rows="10" cols="50" required></textarea>
      <div class="create-post">
        <button type="submit" class="create-post-button" id="create-post-button">Create Post</button>
      </div>
    </form>
  </div>

 <div class="post-history">
  <h2>Post history:</h2>
  <table class="table">
    <thead class="table-success">
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Date created</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      {{#each userPosts}}
  <tr>
    <th scope="row">{{#if this.id}}{{this.id}}{{/if}}</th>
    <td>{{#if this.post_date}}{{format_date this.post_date}}{{/if}}</td>
    <td>{{#if this.post_heading}}{{this.post_heading}}{{/if}}</td>
    <td>{{#if this.post_body}}{{this.post_body}}{{/if}}</td>
    <td>
      <a href="/dashboard/edit/{{this.id}}" class="edit-post btn"><i class="bi bi-pencil-square"></i></a>
      <a href="/dashboard/delete/{{this.id}}" class="delete-post btn"><i class="bi bi-trash"></i></a>
    </td>
  </tr>
{{/each}}
    </tbody>
  </table>
</div>
